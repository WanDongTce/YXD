.clearfix{clear: both}
.box{width: 686rpx;height: 580rpx;border-radius: 15rpx;box-shadow: 0px 0px 15px 0px rgba(4, 0, 0, 0.15);
margin: 0 auto;margin-top: 80rpx;overflow: hidden}
.box .card{width: 100%;height: 104rpx;background-color: #FBFBFB;padding-top: 46rpx}
.box .card .bank{width: 586rpx;margin: 0 auto;background-image: url(http://m.54xuebaxue.com/wx_img/img/yingxiaoduan/my/more.png);background-position: top right;
background-repeat: no-repeat;background-size:12rpx 22rpx }
.box .card .bank .left text{font-size: 28rpx;color: #333;display: block;height:28rpx;line-height: 28rpx }
.box .card .bank .left{float: left}
.box .card .bank .right{float: left}
.box .card .bank .right .banke_sun{font-size: 28rpx;color: #333;display: block;height: 28rpx;line-height: 28rpx;
margin-left: 34rpx;padding-left: 44rpx;background-image:url(http://m.54xuebaxue.com/wx_img/img/yingxiaoduan/my/banklog.png);background-repeat: no-repeat;
background-position: center left;background-size: 28rpx }
.box .card .bank .right .time{font-size: 22rpx;color: #666;display: block;height: 22rpx;line-height: 22rpx;
margin-left: 34rpx;margin-top: 22rpx}

.box .monery{width: 586rpx;margin: 0 auto;margin-top: 36rpx}
.box .monery .name text{font-size: 30rpx;color: #333;display: block;height:30rpx;line-height: 30rpx; }
.box .monery .text input{display: block;width: 536rpx;padding-left: 50rpx;border-bottom: 2rpx solid #E4E4E4;
height: 132rpx;background-image:url(http://m.54xuebaxue.com/wx_img/img/yingxiaoduan/my/money.png);
background-repeat: no-repeat;
background-position: center left;background-size: 34rpx 40rpx}
.box .monery .balance{margin-top: 28rpx;}
.box .monery .balance text{display: block;font-size: 24rpx;color: #333}
.box .btn{width: 480rpx;height: 66rpx;margin: 0 auto;background-color: #4BACE1;margin-top: 52rpx;border-radius: 15rpx;font-size: 32rpx;color: #fff;text-align: center;line-height: 66rpx}
.layer_box{width: 100%;height: 100%;position: fixed;left: 0;top: 0;background-color: rgba(4, 0, 0, 0.4);
display: flex;justify-content: center;align-items:center;}
.layer_box .layer{width: 530rpx;
background-color: #fff;margin: 40% auto;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  position: relative;}
.isRuleShow {
  display: block;
}
 
.isRuleHide {
  display: none;
}
.layer_box .layer .list{width: 470rpx; margin: 0 auto}
.layer_box .layer .list text{display: block;line-height: 90rpx;padding-left: 60rpx;
background-image: url(http://m.54xuebaxue.com/wx_img/img/yingxiaoduan/my/banklog.png);
background-repeat: no-repeat;background-position: left center;background-size: 46rpx 46rpx;
font-size: 30rpx;}
