
  <view class="bind-card-item">
    <view class="card-label">
      持卡人：
    </view> 
    <view class="card-msg">
      <input type="text" value="{{user}}" placeholder="请输入持卡人姓名" placeholder-class="placeholder-tip" bindinput="userInput"/>  
    </view>  
    <view class="clearfix"></view>
  </view>
  <view class="bind-card-item">
    <view class="card-label">
    卡号：
    </view> 
    <view class="card-msg">
      <input type="number" value="{{userInputCardNum}}" placeholder="请输入银行卡账号" placeholder-class="placeholder-tip" bindinput="bankcardInput" maxlength="22"/>  
    </view> 
    <view class="clearfix"></view>
  </view>
  <view class="bind-card-item">
    <view class="card-label">
      卡类型：
    </view> 
    <view class="card-msg">
    <input type="number" value="{{cardType}}" placeholder="请输入银行卡类型" placeholder-class="placeholder-tip" bindinput="bankcardTypeInput" class="cardTypeInput"/> 
    </view> 
    <view class="clearfix"></view>
  </view>



   <view class="bind-card-item">
    <view class="card-label">
    手机号：
    </view> 
    <view class="card-msg">
      <input type="text" value="{{phone}}" placeholder="请输入预留手机号" placeholder-class="placeholder-tip" bindinput="phoneInput"/>  
    </view> 
    <view class="clearfix"></view> 
  </view>
  <view class="bind-card-item">
    <view class="card-label">
    银行名称：
    </view> 
    <view class="card-msg">
      <input type="text"  placeholder="请输入银行名称" bindinput="bank" />  
    </view> 
    <view class="clearfix"></view> 
  </view>
   <view class="bind-card-item">
    <view class="card-label">
    支行名称：
    </view> 
    <view class="card-msg">
      <input type="text"  placeholder="请输入支行名称" bindinput="branch" />  
    </view> 
    <view class="clearfix"></view> 
  </view>
  
<view class="btn" catchtap="addcar">
  <text>下一步</text>
</view>
