/* pages/balance/pages/addcard/addcard.wxss */
.clearfix{clear: both}
.list_box{width: 686rpx;margin: 0 auto}
.list_box .list{width: 686rpx;height: 218rpx;margin-top: 32rpx;position: relative}
.list_box .list image{display: block;width: 100%;height: 100%}
.list_box .list .content{width: 100%;height: 100%;position: absolute;left: 0;top: 0}
.list_box .list .content  .logo{width: 80rpx;height: 80rpx;margin-left: 30rpx;margin-top: 20rpx;
display: block;float: left}
.list_box .list .content .name{font-size: 32rpx;height: 80rpx;line-height: 80rpx;float: left;display: block;
color: #fff;margin-top: 20rpx;margin-left: 30rpx}
.list_box .list .content .number text{display: block;color: #fff;font-size: 36rpx;height: 36rpx;line-height: 36rpx}
.list_box .list .content .number{margin-left: 140rpx;margin-top: 40rpx}
.add{width: 686rpx;margin: 0 auto;border-bottom: 2rpx solid #C8C8C8;padding-bottom: 30rpx;margin-top: 50rpx}
.add image{display: block;float: left;width: 60rpx;height: 60rpx;}
.add text{display: block;font-size: 32rpx;color: rgb(189, 109, 109);line-height: 60rpx;
margin-left: 20rpx;float: left}